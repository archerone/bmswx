page {
  height: 100%;
}
.container{
  padding:0;
  height: auto;
  align-items:inherit;
  justify-content:inherit;
}
.user-info {
  width: 100%;
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  margin:200rpx 0 90rpx;
}

.avatar {
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 1px solid #eee;
  overflow:hidden;
  display: block;
}

.name {
  font-size: 36rpx;
  text-align: center;
}


.listwrap{
  width: 100%;
  font-size:30rpx;
  padding: 40rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color: #fff;
}
.listab{
  font-size:36rpx;
  margin:0 30rpx;
  text-align:center;
  padding:0 30rpx;
  line-height:100%;
  color:#666;
}
.listab text{
  font-size:26rpx;
  color:#bbbbbb;
}

